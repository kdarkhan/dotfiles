bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 20 px or 20 ppt
        bindsym Shift+h resize grow left 20 px or 20 ppt
        bindsym l resize grow right 20 px or 20 ppt
        bindsym Shift+l resize shrink left 20 px or 20 ppt
        bindsym k resize shrink down 20 px or 20 ppt
        bindsym Shift+k resize grow up 20 px or 20 ppt
        bindsym j resize grow down 20 px or 20 ppt
        bindsym Shift+j resize shrink up 20 px or 20 ppt

        bindsym $mod+h focus left
        bindsym $mod+j focus down
        bindsym $mod+k focus up
        bindsym $mod+l focus right

        bindsym w move up 20 px
        bindsym a move left 20 px
        bindsym s move down 20 px
        bindsym d move right 20 px

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"

        bindsym $mod+Tab focus right
}

bindsym $mod+r mode "resize"

# passthrough mode for temporarily disabling shortcuts
bindsym $mod+p mode "passthrough"
mode "passthrough" {
        bindsym $mod+q mode "default"
}

